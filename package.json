{
  "name": "funiverse-web-app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "format": "prettier --check ./src",
    "format:fix": "prettier --write ./src",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "prepare": "husky install"
  },
  "dependencies": {
    "@types/node": "18.11.17",
    "@types/react": "18.0.25",
    "@types/react-dom": "18.0.9",
    "eslint": "8.28.0",
    "eslint-config-next": "13.0.5",
    "next": "13.0.5",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "typescript": "4.9.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.3.0",
    "@commitlint/config-conventional": "^17.3.0",
    "husky": "^8.0.2",
    "lint-staged": "^13.0.4",
    "prettier": "^2.8.0",
    "sass": "^1.56.1"
  },
  "lint-staged": {
    "*.{scss,css,json,md,html}": "yarn format:fix",
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix ./src",
      "yarn format:fix",
      "git add ."
    ]
  }
}
